                    </Grid.ColumnDefinitions>

                    <Frame Style="{StaticResource FrameImageWrapper}">
                        <ImageButton Source="{Binding RobotOneImagePath, Converter={asdfasdfadsf d6f875dsa8f5a87df98a7sf9a8sd}}" CommandParameter="0">
                            <ImageButton.Triggers>
                                <DataTrigger TargetType="ImageButton" Binding="{Binding RobotOneImagePath, Converter={StaticResource ImagePathConverter}}" Value="true">
                                    <Setter Property="Source" Value="default_robot_icon"/>
                                </DataTrigger>
                                <DataTrigger TargetType="ImageButton" Binding="{Binding RobotOneImagePath, Converter={StaticResource ImagePathConverter}}" Value="false">
                                    <Setter Property="Source" Value="{Binding Match.Robots[0].ImagePath}"/>
                                </DataTrigger>
                            </ImageButton.Triggers>
                        </ImageButton>
                    </Frame>
                    <Entry Text="{Binding RobotOneId}"/>
                    <local:CustomEditor Text="{Binding Match.Robots[0].RobotInfo}"/>
                </Grid>
                
                <Frame.Triggers>
                    <DataTrigger TargetType="Frame" Binding="{Binding DisplayRobotFrameAmount, Converter={StaticResource DetermineFrameVisibility}, 
                        ConverterParameter=1}" Value="true">
                        <Setter Property="IsVisible" Value="True"/>
                    </DataTrigger>
                </Frame.Triggers>
